<div class="container mx-auto mt-20 px-4 pb-20">
  <h2 class="text-3xl md:text-4xl font-bold text-center text-white mb-8"><%= translations.register %></h2>
  <form action="/register" method="POST" class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-lg">
    <% if (locals.error) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
        <span class="block sm:inline"><%= error %></span>
      </div>
    <% } %>
    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2" for="username"><%= translations.username %></label>
      <input class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent" type="text" id="username" name="username" required>
    </div>
    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2" for="email"><%= translations.email %></label>
      <input class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent" type="email" id="email" name="email" required>
    </div>
    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2" for="password"><%= translations.password %></label>
      <input class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent" type="password" id="password" name="password" required>
    </div>
    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2" for="confirm_password"><%= translations.confirm_password %></label>
      <input class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent" type="password" id="confirm_password" name="confirm_password" required>
    </div>
    <div class="mb-4">
      <button type="submit" class="w-full bg-blue-600 text-white font-bold py-2 px-4 rounded-md hover:bg-blue-700 transition duration-300"><%= translations.register %></button>
    </div>
  </form>
</div>