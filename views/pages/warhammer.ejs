<div class="container mx-auto mt-10">
  <h2 class="text-3xl font-bold text-center text-white"><%= translations.warhammer %></h2>
  <p class="text-center text-white"><%= translations.welcome %></p>
  
  <% if (locals.user) { %>
    <%- include('../partials/army_management', { game: 'Warhammer' }) %>
  <% } else { %>
    <p class="text-center text-white">
      <%= translations.please_login %> 
      <a href="/login" class="text-blue-600 underline"><%= translations.login %></a> 
      <%= translations.to_see_create_army %>
    </p>
  <% } %>
</div>

<script type="module">
import { initializeArmyManagement } from '/js/army_management.js';
document.addEventListener('DOMContentLoaded', function() {
  console.log('DOM content loaded for <%= game %>');
  initializeArmyManagement('<%= game %>', '<%= locale %>');
});
</script>